<%- include('partials/header')  %>
<div class="ui main text container segment">
		<div class="ui huge header"><%= blog.title %></div>
		<div class="ui top attached">
			<div class="item">
				<img class="ui image centered rounded" src="<%= blog.image_url %>" alt="<%= blog.title %>">
				<div class="content">
					<span><%= blog.created_date.toDateString() %></span>
				</div>
				<div class="description">
					<!-- TODO - Sanitize inputs -->
					<p><%- blog.body %></p>
				</div>
				<a href="/blogs/<%= blog._id%>/edit" class="ui blue basic button">EDIT</a>
				<form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST" id="delete-form">
					<button class="ui red basic button" type="submit">Delete</button>
				</form>
			</div>
		</div>
	</div>

<%- include('partials/footer')  %>