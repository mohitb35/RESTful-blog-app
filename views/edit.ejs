<%- include('partials/header')  %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<!-- Method override as html does not support PUT/DELETE -->
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
		<div class="field">
			<label for="blog-title">Title</label>
			<input type="text" name="blog[title]"  id="blog-title" placeholder="Enter title" value="<%= blog.title %>">
		</div>
		<div class="field">
			<label for="blog-image_url">Image</label>
			<input type="text" name="blog[image_url]" id="blog-image_url" placeholder="Enter image URL" value="<%= blog.image_url %>">
		</div>
		<div class="field">
			<label for="blog-body">Content</label>
			<textarea name="blog[body]" id="blog-body" placeholder="Enter blog post here"><%= blog.body %></textarea>
		</div>
		<input type="submit" class="ui orange big basic button" value="Save">
	</form>
</div>

<%- include('partials/footer')  %>